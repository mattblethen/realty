---
const nav = [
  { href: "/", label: "Home" },
  { href: "/sell", label: "Sell Your Home" },
  { href: "/tour", label: "Book a Tour" },
  { href: "/property-search", label: "Property Search" },
  { href: "/about", label: "About Bill" },
  { href: "/contact", label: "Contact" },
];
---
<header class="sticky top-0 z-50 bg-[#121212]/95 backdrop-blur border-b border-[#252526]">
  <div class="wrap h-16 flex items-center justify-between">
    <!-- Brand -->
    <a href="/" class="text-base md:text-lg font-semibold tracking-wide text-[--c21-gold]">
      CENTURY 21 Pinnacle Â· Bill Adams
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-6">
      {nav.map((n) => (
        <a href={n.href} class="text-sm hover:text-[--c21-gold]">{n.label}</a>
      ))}
    </nav>

    <!-- Mobile Menu -->
    <details class="relative md:hidden">
      <summary class="list-none">
        <span class="inline-flex items-center gap-2 rounded-lg border border-[--c21-gold] text-[--c21-gold] px-3 py-2">
          <!-- hamburger icon -->
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M3 6h18v2H3zM3 11h18v2H3zM3 16h18v2H3z"/>
          </svg>
          <span class="text-sm">Menu</span>
        </span>
      </summary>

      <!-- full-width sheet -->
      <div class="absolute right-0 mt-2 w-[min(85vw,320px)] rounded-lg border border-[#2a2a2a] bg-[#121212] shadow-xl overflow-hidden">
        <div class="p-2">
          <!-- Highlight primary actions first -->
          <a href="/sell" class="block px-3 py-2 rounded-md bg-[--c21-gold] text-white font-semibold mb-2">Sell Your Home</a>
          <a href="/tour" class="block px-3 py-2 rounded-md border border-[--c21-gold] text-[--c21-gold] font-semibold mb-2">Book a Tour</a>

          <div class="h-px bg-[#2a2a2a] my-2" />

          {nav.map((n) => (
            <a href={n.href} class="block px-3 py-2 rounded hover:bg-[#1b1b1b] text-sm">{n.label}</a>
          ))}
        </div>
      </div>
    </details>
  </div>
</header>
