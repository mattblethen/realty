---
interface Props {
  title?: string;
  description?: string;
  class?: string;
}
import "../styles/global.css";              // <— add this line

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import StickyContact from "../components/StickyContact.astro";

const {
  title = "Berea Real Estate — Bill Adams | CENTURY 21 Pinnacle",
  description = "Sell your home or book a tour with Bill Adams, Co-Owner of CENTURY 21 Pinnacle in Berea, KY.",
  class: cls = "",
} = Astro.props;
---
<html lang="en" class="bg-[#121212] text-[#F4F4F4]">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    <!-- removed the static CSS link -->
  </head>
  <body class={`min-h-screen antialiased ${cls}`}>
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:bg-[#BEAF87] focus:text-black focus:px-3 focus:py-1 rounded">Skip to content</a>
    <Header />
    <main id="main">
      <slot />
    </main>
    <Footer />
    <StickyContact />
  </body>
</html>
